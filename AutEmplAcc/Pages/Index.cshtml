@page
@model AutEmplAcc.Pages.Emp.IndexModel
<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="images/53wgmJ5oKYHg.png">
    <title>Akonta</title>
    <link rel="stylesheet" href="css/site2.css">
    <link rel="stylesheet" href="css/site3.css">
    <link rel="stylesheet" href="css/site4.css">
    <link rel="stylesheet" href="css/site5.css">
    <link rel="stylesheet" href="css/site6.css">
</head>
<body>
    <div class="achievement">
        <div class="container">
            <div class="content" style="padding-top: 15px; padding-bottom: 0px;">
                <div class="row">
                    <div class="col-md col-sm-6">
                        <i class="la la-users"></i>
                        <h2 class="number-counter">55</h2>
                        <p>Сотрудников</p>
                    </div>
                    <div class="col-md col-sm-6">
                        <i class="la la-location-arrow"></i>
                        <h2 class="number-counter">10</h2>
                        <p>Филиалов открыто</p>
                    </div>
                    <div class="col-md col-sm-6">
                        <i class="la la-expand"></i>
                        <h2 class="number-counter">17</h2>
                        <p>Лет опыта</p>
                    </div>
                    <div class="col-md col-sm-6">
                        <i class="la la-recycle"></i>
                        <h2 class="number-counter">10</h2>
                        <p>% рентабельность продаж</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- loader -->
    <div class="loader">
        <div class="loading">
            <div class="spinner-border aloader" role="status">
                <span class="sr-only"></span>
            </div>
        </div>
    </div>
    <!-- end loader -->
    <!-- about -->
    <div id="about" class="about">
        <div class="container">
            <div class="row g-5 align-items-center">
                <div class="col-md-7">
                    <img src="images/Rvkd4GE0sItn.png" alt="">
                </div>
                <div class="col-md">
                    <div class="content">
                        <h2>О нас</h2>
                        <p>Розничная торговля в неспециализированных магазинах преимущественно продуктами питания, напитками и табачными изделиями.</p>
                        <div class="row">
                            <div class="col">
                                <ul>
                                    <li><i class="la la-check"></i> Профессионализм</li>
                                    <li><i class="la la-check"></i> Надежность</li>
                                    <li><i class="la la-check"></i> Доверенность</li>
                                </ul>
                            </div>
                            <div class="col">
                                <ul>
                                    <li><i class="la la-check"></i> Поддержка 24/7</li>
                                    <li><i class="la la-check"></i> Большой опыт</li>
                                    <li><i class="la la-check"></i> Низкая цена</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end about -->
    <div id="testimonial" class="testimonial">
        <div class="container">
            <div class="chooseBranchBox">
                <h3 style=" margin-bottom: 10px;">
                    Выберите филиал:
                </h3>
                <form asp-page-handler="ShowEmployees" method="post">
                    <select name="branchId" id="branchSelect" class="selectBranch">
                        @foreach (var branch in Model.Branches)
                        {
                            <option value="@branch.BranchId">@branch.Name</option>
                        }
                    </select>
                    <button type="submit" class="showEmpButton">Показать сотрудников</button>
                    <p>
                        <a asp-page="./Branch/Index" class="createBranchClass">Изменить</a>
                    </p>
                </form>
            </div>
            <!-- contact -->
            <div id="contact" class="contact">
                <div class="container" style="color : #2d3e50">
                    <div class="row">
                        <div class="col-md-4 col-contact">
                            <h2>Наши контакты</h2>
                        </div>
                        <div class="col-md-4">
                            <h5 style="color:#2d3e50">Адрес</h5>
                            <span> РБ, Брестская область, Кобринский район, г. Кобрин, ул. Южная, 3 </span>
                        </div>
                        <div class="col-md">
                            <h5 style="color:#2d3e50">Телефон</h5>
                            <span> +375 297 28-27-20 </span>
                        </div>
                        <div class="col-md">
                            <h5 style="color:#2d3e50">Email</h5>
                            <span> elidacompany2007@mail.ru </span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end contact -->
            <!-- script -->
            <script src="js/site2.js"></script>
            <script src="js/site1.js"></script>

</body>
