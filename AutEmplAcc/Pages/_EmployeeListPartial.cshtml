@model IEnumerable<AutEmplAcc.Model.Employee>
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="branchAddress">
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Адрес филиала</th>
                <th>Имя</th>
                <th>Возраст</th>
                <th>Должность</th>
                <th>Адрес</th>
                <th>Паспортные данные</th>
                <th>Телефон</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Branches.Address</td>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Position</td>
                    <td>@employee.Address</td>
                    <td>@employee.PassportData</td>
                    <td>@employee.Phone</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@employee.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@employee.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@employee.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <p>
        <a asp-page="Index">Back</a>
    </p>
</body>
</html>